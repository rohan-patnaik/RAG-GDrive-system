# Application Settings
APP_NAME=RAG GDrive System
ENVIRONMENT=development
# LOG_LEVEL=INFO
LOG_LEVEL=DEBUG
LOG_FILE_PATH=logs/rag_system.log

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# =============================================================================
# LLM API KEYS (REQUIRED)
OPENAI_API_KEY="sk-your_openai_api_key_here"
ANTHROPIC_API_KEY="anthropic_api_key_here"
GOOGLE_API_KEY="key_enter_here"

# LLM Configuration
DEFAULT_LLM_PROVIDER="gemini"
DEFAULT_OPENAI_MODEL="gpt-3.5-turbo"
DEFAULT_ANTHROPIC_MODEL="claude-3-haiku-20240307"
DEFAULT_GEMINI_MODEL="gemini-2.5-flash-preview-05-20"

# =============================================================================
# VECTOR STORE CONFIGURATION
# =============================================================================
VECTOR_STORE_PROVIDER=pinecone
CHROMA_COLLECTION_NAME=rag_documents_v1
VECTOR_STORE_PATH=./data/vector_store

# Pinecone Configuration
PINECONE_API_KEY="key_enter_here "
PINECONE_ENVIRONMENT="us-east-1"
PINECONE_INDEX_NAME="rag-jules"

# Embedding Configuration
EMBEDDING_MODEL_NAME="sentence-transformers/all-MiniLM-L6-v2"
EMBEDDING_MODEL_DEVICE=cpu

# =============================================================================
# RAG PARAMETERS
# =============================================================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=3
SIMILARITY_THRESHOLD=0.4

# Document Processing
DEFAULT_FILE_PATTERNS=["*.txt", "*.md"]
DEFAULT_RECURSIVE_INGESTION=true

# =============================================================================
# PRODUCTION SETTINGS (FOR DEPLOYMENT)
# =============================================================================
# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Monitoring
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# HTTP Client Settings
HTTP_TIMEOUT=60
HTTP_MAX_CONNECTIONS=100
HTTP_MAX_KEEPALIVE=20

# Health Check Settings
HEALTH_CHECK_TIMEOUT=30

# =============================================================================
# TESTING MODE (FOR PYTEST)
# =============================================================================
RAG_SYSTEM_TESTING_MODE=false
